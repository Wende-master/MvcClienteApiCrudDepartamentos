@model IEnumerable<MvcClienteApiCrudDepartamentos.Models.Departamento>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-controller="Departamentos" asp-action="Create">Nuevo</a>
</p>
<table class="table table-secondary table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdDepartamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Localidad)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdDepartamento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Localidad)
                </td>
                <td>
                    <a class="btn btn-outline-primary" asp-controller="Departamentos"
                       asp-action="Details" asp-route-iddepartamento="@item.IdDepartamento">Detalles</a>

                    <a class="btn btn-outline-primary" asp-controller="Departamentos"
                       asp-action="Update" asp-route-iddepartamento="@item.IdDepartamento">Actualizar</a>

                    <a class="btn btn-outline-danger" asp-controller="Departamentos"
                       asp-action="DeleteDepartamento" asp-route-iddepartamento="@item.IdDepartamento">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
